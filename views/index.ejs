<%- include('partes/header')%>
<link rel="stylesheet" type="text/css" href="styles.css" />
<%- include('partes/navbar')%>


<div class="container text-center">
    <div class="row">
        <% stuff.forEach(e => { %> 
            <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card" style="width: 100%">
                    <img class="card-img-top" src="<%=e.image%> " alt="Card image cap" height="200px">
                    <div class="card-body">
                      <h4 class="card-title"><a href="/product/<%=e._id%> "><%=e.name%></a>            
                    </h4>
                    <h5><p>Price: <%=e.price%>$ </p></h5>
                      <form action="/cart" method="post">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" name="quantity" min="0" max="10" step="1" value="1" >
                    <br>
                        <input type="submit" value="Add to Cart" class="btn btn-primary" >
                      </form>
                    </div>
                  </div>
            </div>
            <%   }); %> 
    </div>
</div>
<%- include('partes/footer')%>