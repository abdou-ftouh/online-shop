<%- include('partes/header')%>
    <!-- <link rel="stylesheet" type="text/css" href="../styles.css" /> -->
<%- include('partes/navbar')%>
    <div class="container text-center">
     
      <h4 class="hpro">Address</h4>

      <form action="/orders" method="POST">
        <div class="form-group  text-left">
            <label for="name" style="text-decoration: underline;">Products:</label>
            <% let myOrder=[] %> 
            <% for(let i=0;i<data.length;i++) {%> 
            
           <% myOrder.push(data[i].name) %> 
         
        <% } %> 
          <input type="text" id="name" name="name" class="form-control" value="<%=myOrder %>" readonly >
          <label for="fullName">Full Name:</label>
          <input type="text" id="fullName" name="fullName" class="form-control" >
          <label for="street">Street:</label>
          <input type="text" id="street" name="address.street" class="form-control" >
          <label for="city">City:</label>
          <input type="text" id="city" name="address.city" class="form-control" >
          <label for="state">State:</label>
          <input type="text" id="state" name="address.state" class="form-control">
          <label for="zip">Zip Code:</label>
          <input type="number" id="zip" name="address.zip" class="form-control">
          <input type="hidden" name="total" value="<%=total%> "> 
        </div>
       
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Confirm Order</button>
          <a href="/cart" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

    </form>
    </div>
 <%- include('partes/footer')%>