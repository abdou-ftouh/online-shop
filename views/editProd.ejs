<%- include('partes/header')%>
    <!-- <link rel="stylesheet" type="text/css" href="../../styles.css" /> -->
<%- include('partes/navbar')%>
    <div class="container text-center">
      <h4 class="hpro">Edit Product</h4>

      <form action="/product/<%=data._id%>?_method=put" method="POST">
        <div class="form-group  text-left">
          <label for="name">Name:</label>
          <input type="text" id="title" name="name" class="form-control" value="<%=data.name %> ">
          <label for="image">Image:</label>
          <input type="text" id="img" name="image" class="form-control" value="<%=data.image %>">
          <label for="price">Price:</label>
          <input type="number" id="title" name="price" class="form-control" value=<%=data.price %>>
          <label for="description">Description:</label>
          <textarea class="form-control" name="description" rows="3"><%=data.description %></textarea>
        </div>
        <div class="form-group">
          <label for="category">Select Product Category:</label>
          <select name="category" class="custom-select" >
              <option value="Electronic">Electronic</option>
              <option value="Clothes" >Clothes</option>
              <option value="Kitchen">Kitchen</option>
              <option value="Games">Games</option>
              <option value="Travels">Travels</option>
              <option value="Baby">Baby</option>
              <option value="Pet Supplies">Pet Supplies</option>
              <option value="Sports & Outdoors">Sports & Outdoors</option>
              <option value="Tools & Home Improvement">Tools & Home Improvement</option>
              <option value="Toys">Toys</option>
              <option value="Garden & Outdoor">Garden & Outdoor</option>
              <option value="Handmade">Handmade</option>
              <option value="Home">Home</option>
              <option value="Jewelry">Jewelry</option>
              <option value="Shoes">Shoes</option>
              <option value="Garden">Garden</option>

          </select>
      </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Update Product</button>
          <a href="/product" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

    </form>
    </div>
 <%- include('partes/footer')%>